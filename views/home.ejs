<% include part_head %>
<% include part_scripts %>
	<div class="container">
		<!-- header test -->
		<div class="page-header col-xs-12" >
			<div class="col-md-6" style="padding-top: 30px;">
				<div class="col-xs-3 col-sm-1 col-md-2" style="padding-top: 10px;"><img id="logo" src="../static/img/default.jpg"/></div>
			    <div class="col-xs-6 col-sm-4" style="padding-top: 10px;">
			    	<h1 class="username"><%= user.name %></h1>
			    </div>
			    <div class="col-xs-4" style="padding-top: 15px;">
				<button class="btn btn-default follow-button" username="<%= user.name %>" >follow</button>
			</div>
		    </div>
		    <div class="col-md-3 col-sm-6 pull-right" style="padding-top: 20px;">
		    	<table class="table stats_table">
			    	<tr>
			    		<td>Posts</td>
			    		<td>Followers</td>
			    		<td>Following</td>
			    	</tr>
			    	<tr>
			    		<td><%= user.posts %></td>
			    		<td><%= user.followers %></td>
			    		<td><%= user.following %></td>
			    	</tr>
			    </table>
		    </div>
		</div>
		<!-- header test -->
		<div class="row">
			<div class=" col-lg-offset-2 col-md-offset-1 col-lg-8 col-md-10 col-xs-12">
				<!-- start: create post/upload -->
				<div class="clearfix">
					<div class="well col-md-12">
						<form method="POST" id="post-form" action="/post" enctype="multipart/form-data">
							<div class="form-group">
								<!-- needs to be input until we find away around the ie issue with textareas not submitting -->
								<input rows="2" type="text" name="text" class="form-control" placeholder="Upload a picture and post!">
							</div>
							<div class="form-group">
								<input type="file" name="photo" class="form-control">
							</div>
							<input style="float:right" type="submit" class="btn btn-success" value="upload">
						</form>
						<br style="clear: both;" />
					</div>
				</div>
				<!-- end: create post/upload -->

				<div class="well col-md-12 feed_main">
					<% posts.forEach(function(post){ %>
				    	<% include part_post %>
				    <% }) %>
					
					
				</div>
			</div>
			<div class="col-md-2 col-xs-0"></div>
		</div>
	</div>
<% include part_foot %>